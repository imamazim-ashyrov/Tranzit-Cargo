{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.exclude": {
        ".vscode": true,
        "**/__snapshots__": true,
        "**/node_modules": true,
    },
    "search.exclude": {
        "**/__snapshots__": true,
        "**/node_modules": true,
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true,
    },
    "[typescriptreact]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false
}